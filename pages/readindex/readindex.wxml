<!--pages/readindex/readindex.wxml-->
<view class='content'>
      <view class='items'wx:for="{{lingdudetail}}" bindtap='godetail' data-artid='{{index}}'>
                <view class='item'>
                      <view class='item-top'>
                            <image src='{{item.aPhoto}}'></image>
                            <text>{{item.author}}</text>
                      </view>
                      <view class='item-title'>
                       
                        <image src='{{item.bigImg}}'> </image>
                          <view>
                            <text>热点</text> {{item.tit}}
                          </view>
                      </view>
                      <view class='item-content'>
                          {{item.intro}}
                      </view>
                      <view class='item-number'>
                              <view>{{item.clickNum}}点击 </view>
                              <view>{{item.great}}
                                  <text class='iconfont .icon-dianzan'></text>
                              </view>
                      </view>
                 </view>
      </view>

</view>
