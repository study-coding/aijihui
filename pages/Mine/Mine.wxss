/* pages/Mine/Mine.wxss */
/**index.wxss**/
page{
  height: 100%;
}
view{
  padding: 0;
  margin: 0;
}
.contain{
  background-color: #f6f6f6;
  height: 100%;
}
.contain-top{
  background-color: white;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.timeandwnk{
  width: 100%;
  height: 155rpx;
  display: flex;
  justify-content: space-around;
  background: white;
  align-items: center;
  position: relative;
  margin-bottom: 18rpx;
}
.timeandwnk view{
  height: 100%;
  width: 114rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.timeandwnk view text:nth-child(1){
  color: #6b6b6b;
   font-weight: bold; 
   text-align: center;
   font-size: 28rpx;
}
.timeandwnk view text:nth-child(2){
  color: #838383;
   text-align: center;
   font-size: 25rpx;
  
}
.timeandwnk view:nth-child(2){
  height: 46rpx;
  width: 8rpx;
  background-color: #ececec;
}
.timeandwnk view:nth-child(4){
  width:42rpx;
  height:58rpx;
  position: absolute;
  right: 22rpx;
}
.content-middle{
  background: white;
}
.row{
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.row-header{
  margin-left: 33rpx;
  height: 100%;
  display: flex;
  align-items: center;
}
.row-header view:first-child{
  width: 42rpx;
  height: 40rpx;
  margin-right: 34rpx;
  
}
.row-header text{
  font-size: 34rpx;
  color: #444444;
  font-weight: bold;
}
.right{
   width:42rpx;
  height:58rpx;
  margin-right: 22rpx;
}