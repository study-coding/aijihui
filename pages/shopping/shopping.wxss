/* pages/shopping/shopping.wxss */
@import "/style/iconfont.wxss";
.content{
  padding: 0 30rpx;
}
.content-top{
  position: fixed;
  top: 0;
  display: flex;
  height: 68rpx;
  width: 100%;
  align-items: center;
  background-color: white
}
.content-top input{
  height: 67rpx;
  width: 600rpx;
  border: 1px solid #f6f6f6;
  background: #f6f6f6;
  border-radius: 20rpx;
  margin-right: 30rpx;

}
.content-top text{
 color: #979797;
 font-size: 40rpx;
 font-weight: bold;
}

.typeSearch{
  position: fixed;
  margin-top: 40rpx;
  display: flex;
  width: 100%;
}

.typeSearch .type, .typeSearch .brand, .typeSearch .degree{
  width: 19%;
  display: flex;
  align-items: center;
  height: 100rpx;
  padding:0 6%;
  font-size: 30rpx;
  color: #979797;
}

.content-neck view{
  width: 330rpx;
  height: 100%;
  border-radius: 5%;
}
.content-border{
margin: 32rpx 0;
padding-top: 130rpx;
display: flex;
justify-content: space-between;
align-items: center;
}
.content-border text{

  font-size: 25rpx;
  color: #b3b3b3;
}
.content-border view{
  height: 2rpx;
  width: 300rpx;
  background: #f1f1f1;
}

.placeStyle{
  font-size: 25rpx;
  text-align: center
}



