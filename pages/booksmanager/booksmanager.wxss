/* pages/booksmanager/booksmanager.wxss */
.top{
  height: 102rpx;
  display: flex;
  border-bottom:1px solid  #dfdcdc;
  position: relative;
}
.top>view{
  width: 50%;
  height: 100%;
  position: relative;
}
.top>view:first-child{
  border-right:1rpx solid  #dfdcdc;
}
.top >view>view{
  width: 160rpx;
  text-align: center;
  line-height: 102rpx; 
  margin: auto;
}
.top >view >text{
  position: absolute;
  font-size: 26rpx;
  text-align: center;
  top: 32rpx;
  right: 64rpx;
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #00b2b2;
  border-radius: 50%;
  color: #00b2b2;

}
.selected{
  border-bottom:3px solid #f48809;
}
.bookitem{
  width: 692rpx;
  margin:0 auto;
  background: #fafafa;
  border: 1px solid #f2f2f2; 
  border-radius: 5rpx;
}
.bookitem-top{
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.Checkbox{
  width: 200rpx;
  font-size:26rpx ;
}
.bookitem-top-right1{
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.bookitem-top-right2{
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.bookitem-top-right-author text:nth-child(1){
    color: #00b2b2;
    font-size: 26rpx;
}
.bookitem-top-right-author text:nth-child(2){
    color: #cdcdcd;
    font-size: 26rpx;
}
.bookitem-top-right-time text:nth-child(1){
    color: #00b2b2;
    font-size: 26rpx;
}
.bookitem-top-right-time text:nth-child(2){
    color: #cdcdcd;
    font-size: 26rpx;
}
.bookitem-top-kai{
  height: 48rpx;
  width: 48rpx;
  border-radius:50%;
  background: #eeeeee; 
  margin-left:12rpx; 

}
.bookitem-bottom-button{
  display: flex;
  justify-content:flex-end;
  
}
.bookitem-bottom-button button{
  height: 68rpx;
   margin: 0rpx;
  font-size: 28rpx;
  color: white;
  text-align: center;
}
.bookitem-bottom-button button:nth-child(2){
 margin: 0 26rpx;
}
.booitem-bottom-introduction{
  border-top: 1px solid #dfdcdc;
  color: #939393;
  font-size:26rpx;
  letter-spacing: 4rpx;
  text-indent: 2em;
}

.piliangdelete{
   width: 100%;
   height: 100rpx;
   background: #00b2b2;
   position: fixed;
   bottom: 0rpx;
   color: white;
   text-align: center;
   line-height: 100rpx;
}